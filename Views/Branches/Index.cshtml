@model IEnumerable<VehicleLeasingApp.Models.Branches>

@{
	ViewData["Title"] = "Index";
}

<h1>Manage Branches</h1>

<p>
	<a class="btn btn-primary" asp-action="Create">Add New Branch</a>
</p>
<table class="table table-bordered table-hover table-responsive-lg">
	<thead style="background-color: #d9edf7;">
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Location)
			</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Location)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.BranchId" title="Edit" class="mx-2">
						<i class="fas fa-edit"></i>
					</a> |
					<a asp-action="Details" asp-route-id="@item.BranchId" title="Details" class="mx-2">
						<i class="fas fa-info-circle"></i>
					</a> |
					<a asp-action="Delete" asp-route-id="@item.BranchId" title="Delete" class="mx-2">
						<i class="fas fa-trash-alt text-danger"></i>
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>

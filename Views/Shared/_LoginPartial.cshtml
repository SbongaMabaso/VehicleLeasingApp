@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between w-100">
    @if (SignInManager.IsSignedIn(User))
    {
        <ul class="navbar-nav mx-auto">
            <li class="nav-item">
                <a class="nav-link text-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == "Branches" ? "active" : "")"
                   asp-controller="Branches" asp-action="Index">Branches</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == "Clients" ? "active" : "")"
                   asp-controller="Clients" asp-action="Index">Clients</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == "Drivers" ? "active" : "")"
                   asp-controller="Drivers" asp-action="Index">Drivers</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == "Manufacturers" ? "active" : "")"
                   asp-controller="Manufacturers" asp-action="Index">Manufacturers</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == "Suppliers" ? "active" : "")"
                   asp-controller="Suppliers" asp-action="Index">Suppliers</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == "Vehicles" ? "active" : "")"
                   asp-controller="Vehicles" asp-action="Index">Vehicles</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == "VehicleSummary" ? "active" : "")"
                   asp-controller="VehicleSummary" asp-action="Index">VehicleSummary</a>
            </li>
        </ul>

        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
        </ul>
    }
    else
    {
        <ul class="navbar-nav ms-auto">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        </ul>
    }
</div>

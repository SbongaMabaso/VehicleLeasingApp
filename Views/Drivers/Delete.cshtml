@model VehicleLeasingApp.Models.Drivers

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Driver</h1>

<h4>Are you sure you want to delete this driver?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LicenseNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LicenseNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LicenseExpiry)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LicenseExpiry)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DriverId" />
        <input type="submit" value="Delete" class="btn btn-danger float-end" />
        <a class="btn btn-outline-info float-start" asp-action="Index">Cancel</a>
    </form>
</div>

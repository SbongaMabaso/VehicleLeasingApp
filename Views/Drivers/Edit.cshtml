@model VehicleLeasingApp.Models.Drivers

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Driver</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DriverId" />
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LicenseNumber" class="control-label"></label>
                <input asp-for="LicenseNumber" class="form-control" />
                <span asp-validation-for="LicenseNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LicenseExpiry" class="control-label"></label>
                <input asp-for="LicenseExpiry" class="form-control" />
                <span asp-validation-for="LicenseExpiry" class="text-danger"></span>
            </div>
            <div class="form-group pt-4">
                <input type="submit" value="Update Driver" class="btn btn-primary float-end" />
                <a class="btn btn-outline-info float-start" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

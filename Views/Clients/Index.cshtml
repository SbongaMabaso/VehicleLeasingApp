@model IEnumerable<VehicleLeasingApp.Models.Clients>

@{
	ViewData["Title"] = "Index";
}

<h1>Manage Clients</h1>

<p>
	<a class="btn btn-primary" asp-action="Create">Add New Client</a>
</p>
<table class="table table-bordered table-hover table-responsive-lg">
	<thead style="background-color: #d9edf7;">
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.CompanyName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ContactPerson)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Phone)
			</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.CompanyName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ContactPerson)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Phone)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.ClientId" title="Edit" class="mx-2">
						<i class="fas fa-edit"></i>
					</a> |
					<a asp-action="Details" asp-route-id="@item.ClientId" title="Details" class="mx-2">
						<i class="fas fa-info-circle"></i>
					</a> |
					<a asp-action="Delete" asp-route-id="@item.ClientId" title="Delete" class="mx-2">
						<i class="fas fa-trash-alt text-danger"></i>
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>
